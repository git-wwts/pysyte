[MESSAGES CONTROL]
# Disable the message, report, category or checker with the given id(s). You
# can either give multiple identifier separated by comma (,) or put this option
# multiple time (only on the command line, not in the configuration file where
# it should appear only once).
#
# Brain-dead errors regarding standard language features
#
# W0142 is "Used * or ** magic"
#
# Pointless whinging
#
# C0103 is "Invalid name"
# R0903 is "Too few public methods"
# W0232 is Class has no __init__ method
#
# PyLint's module importation is unreliable
#
# W0403 is Relative imports
# E0401 is Unable to import
# C0412 is Imports from package %s are not grouped
#
# Known bug in pylint, see https://bitbucket.org/logilab/pylint/issue/205/wrong-no-value-for-parameter-warnings-when
# E1120 is "No value for argument ... in unbound method call"
#
# Python is a dynamic language, I like that
#
# E1103 is "Instance of ... has no ... member (but some types could not be inferred)".
# E1101 is "Module ... has no ... member"
# W0201 is "Attribute '...' defined outside __init__".
# W0603 is "Using the global statement" We have the statement, we use it
#
# Don't be so fussy
#
# C0111 is Missing docstring
# R0921 is Abstract class not referenced - shown whenever method uses NotImplementedError
# C0302 is Too many lines in module
# R0911 is Too many return statements
# R0912 is Too many branches
# R0914 is Too many local variables
# R0915 is Too many statements
# R0916 is Too many boolean expressions in if statement
# W0106 is Expression ... is assigned to nothing
# W1401 is Anomalous backslash in string
#
# I said "Shut up" So: shut up!
#
# I0011 is "Locally disabling ..."
#
disable=C0103,C0111,C0302,C0412,E0401,E0611,E1101,E1103,E1120,I0011,R0903,R0911,R0912,R0914,R0915,R0916,R0921,W0106,W0142,W0201,W0232,W0403,W1401,

[DESIGN]

# Maximum number of attributes for a class (see R0902).
max-attributes=15

# Maximum number of arguments for function / method
max-args=6
