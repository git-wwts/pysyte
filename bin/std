#! /usr/bin/env python3
"""Run a command and decorate stdout and stderr, interleaved"""

from pysyte.cli.main import run
from pysyte.cli.lines import LinesParser

def add_args(parser_):
    """Parse out command line arguments"""
    p = LinesParser(parser_)
    p.boolean('-o', '--no-stdout', help="Don't decorate stdout")
    p.boolean('-e', '--no-stderr', help="Don't decorate stderr")
    p.version()
    p.lines()
    return p


def main(args):
    pass


run(main, add_args)
